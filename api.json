{
  "swagger": "2.0",
  "info": {
    "title": "Lista de Contatos",
    "description": "Essa API irá disponibilzar acesso aos usuários do sistema.",
    "contact": {
      "name": "Daniel Fonseca da Silva",
      "url": "https://github.com/Daniel-Fonseca-da-Silva"
    },
    "version": "0.0.1"
  },
  "host": "api.fakesite.com",
  "schemes": [
    "https"
  ],
  "basePath": "/v1",
  "produces": [
    "application/json"
  ],
  "paths": {
    "/users": {
      "get": {
        "summary": "Lista dos usuários",
        "description": "Este endpoit irá retorna **todo**s os usuários cadastrados no sistema.\n",
        "tags": [
          "Users"
        ],
        "responses": {
          "200": {
            "description": "Retorna uma lista(array) de usuários",
            "schema": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/User"
              }
            }
          },
          "default": {
            "description": "Erro inesperado",
            "schema": {
              "$ref": "#/definitions/Error"
            }
          }
        }
      },
      "post": {
        "summary": "Cria um usuário",
        "description": "Este endpoit cadastra um usuário no sistema.\n",
        "parameters": [
          {
            "name": "user",
            "in": "body",
            "description": "Usuário",
            "schema": {
              "$ref": "#/definitions/User"
            },
            "required": true
          }
        ],
        "tags": [
          "Users"
        ],
        "responses": {
          "201": {
            "description": "Usuário cadastrado com sucesso no sistema",
            "schema": {
              "$ref": "#/definitions/User"
            }
          },
          "default": {
            "description": "Erro inesperado",
            "schema": {
              "$ref": "#/definitions/Error"
            }
          }
        }
      }
    },
    "/users/{id}": {
      "get": {
        "tags": [
          "user"
        ],
        "summary": "Exibe apenas um usuário",
        "description": "Este endpoint retorna **apenas o usuário** que foi informado o id.\n",
        "responses": {
          "200": {
            "description": "Retorna um usuário",
            "schema": {
              "$ref": "#/definitions/User"
            }
          },
          "default": {
            "description": "Erro inesperado",
            "schema": {
              "$ref": "#/definitions/Error"
            }
          }
        },
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "ID do usuário",
            "type": "integer",
            "required": true
          }
        ]
      }
    }
  },
  "definitions": {
    "User": {
      "required": [
        "email",
        "name"
      ],
      "type": "object",
      "properties": {
        "id": {
          "type": "integer",
          "description": "Código do usuário."
        },
        "email": {
          "type": "string",
          "description": "Email do usuário."
        },
        "name": {
          "type": "string",
          "description": "Nome do usuário."
        }
      }
    },
    "Error": {
      "type": "object",
      "properties": {
        "code": {
          "type": "integer",
          "format": "int32"
        },
        "message": {
          "type": "string"
        },
        "fields": {
          "type": "string"
        }
      }
    }
  }
}